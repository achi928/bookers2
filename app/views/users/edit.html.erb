<div class = "container">
  <div class = "row">
    <div class = "col-md-5 mx-auto">
      <h1>User info</h1>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>件のerrorが発生しました
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
        <div class = "form-group">
          <label for="inputName">Name</label><br>
          <%= f.text_field :name, autofocus: true, id: "inputName" %>
        </div>
        <div class = "form-group">
          <label for="inputImage">Image</label>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class = "form-group">
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_field :introduction, id: "inputIntroduction" %>
        </div>
        <div class = "form-group">
          <%= f.submit "Update User", class: "btn btn-secondary mb-3 mt-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>