<h2>User info</h2>

<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>name
    <%= @user.name %>
  </p>
  <p>introduction
    <%= @user.introduction %>
  </p>
</div>


<h1>New book</h1>

<%= form_with model: [@user, @book] do |f| %>
  <label>Title</label>
    <%= f.text_field :title %>
  <label>Opinion</label>
    <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


<% @books.each do |book| %>
  <div>
    <p>ユーザー画像設定する:<%= image_tag 'sample-author1.jpg' %></p>
    <p>Title<p>
    <%= link_to book_path(book.id) do %>
      <%= book.title %>
    <% end %>
    <p>Opinion<%= book.body %></p>
  </div>
<% end %>
