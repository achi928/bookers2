<h2>User info</h2>

<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>name
    <%= @user.name %>
  </p>
  <p>introduction
    <%= @user.introduction %>
  </p>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集のアイコン", edit_user_path(@user) %></p>
  <% end %>
</div>


<h1>New book</h1>

<%= form_with model: @book do |f| %>
  <label>Title</label>
    <%= f.text_field :title %>
  <label>Opinion</label>
    <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>



<p>image</p>
<p>name</p>
<% @books. each do |book| %>
  <div>
    <%= image_tag book.user.get_profile_image(100,100) %>
    <p>Title<p>
    <%= link_to book_path(book.id) do %>
      <%= book.title %>
    <% end %>
    <p>Opinion<%= book.body %></p>
  </div>
<% end %>

