<div class = "container px-3">
  <div class = "row">
    <div class = "col-md-3">
      <h2>User info</h2>
      <%= image_tag user.get_profile_image(100,100) %>
      <table class = "index-table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
          <tr>
            <th>follows</th>
            <th>
              <%= link_to follow_path(user.id) do %>
                <%= current_user.my_relationships.count %>
              <% end %>
            </th>
          </tr>
          <tr>
            <th>follower</th>
            <th>
              <%= link_to follower_path(user.id) do %>
                <%= current_user.you_relationships.count %>
              <% end %>
            </th>
          </tr>
        </tbody>
      </table>
      <table>
        <%= render 'users/follow-btn', user: @user %>
      </table>
      <div class = "row">
        <%= link_to edit_user_path(user.id), class: "btn btn-outline-dark btn-block" do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>

      <h2>New book</h2>
        <%= form_with model: book do |f| %>
          <div class="form-group">
            <label for = "booktitle">Title</label><br>
            <%= f.text_field :title, autofocus: true, id: "booktitle" %>
          </div>
          <div class="form-group">
            <label for = "bookbody">Opinion</label><br>
            <%= f.text_area :body, autofocus: true, id: "bookbody" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book', class: "btn btn-success mb-3 mt-3" %>
          </div>
        <% end %>
    </div>

