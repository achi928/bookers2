<div class = "container">
  <div class = "row">
    <div class = "col-md-5 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <%= @book.errors.count %>件のerrorが発生しました
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @book do |f| %>
        <div class = "form-group">
          <label for = "inputTitle">Title</label>
          <%= f.text_field :title, autofocus: true, id: "inputTitle" %>
        </div>
        <div class = "form-group">
          <label for = "inputTitle">Opinion</label>
          <%= f.text_area :body, id: "inputTitle" %>
        </div>
        <div class = "form-group">
          <%= f.submit "Update Book", class: "btn btn-success mb-3 mt-3"%>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "Show", book_path(@book.id) %> |
<%= link_to "Back", books_path %>
