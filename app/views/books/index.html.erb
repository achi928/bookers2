<h1>Bookの一覧ページ </h1>



<h1>New book</h1>

<%= form_with model: @book do |f| %>
  <label>Title</label>
    <%= f.text_field :title %>
  <label>Opinion</label>
    <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<% if @user == current_user %>
  <p><%= link_to "プロフィール編集のアイコン", edit_user_path(@user.id) %></p>
<% end %>


<h2>Books</h2>

<% @books.each do |book| %>
  <div>
    <%= link_to user_path(book.user.id) do %>
    <p><%= image_tag book.user.get_profile_image(100,100) %></p>
    <% end %>
    <p>Title<p>
    <%= link_to book_path(book.id) do %>
      <%= book.title %>
    <% end %>
    <p>Opinion<%= book.body %></p>
  </div>
<% end %>
