<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>


<h1>New book</h1>

<%= form_with model: @book do |f| %>
  <label>Title</label>
    <%= f.text_field :title %>
  <label>Opinion</label>
    <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


<h2>Books</h2>

<% @books.each do |book| %>
  <div>
    <p>投稿ユーザー画像：<%= image_tag book.user.get_profile_image(100,100) %></p>
    <p>Title<p>
    <%= link_to book_path(book.id) do %>
      <%= book.title %>
    <% end %>
    <p>Opinion<%= book.body %></p>
  </div>
<% end %>
