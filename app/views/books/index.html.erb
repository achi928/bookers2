<h1>ブックの一覧ページ</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= render 'book', book: @book, user: @user %>



<h2>Books</h2>
<p></p>
<p>title<p>
<p>Opinion</p>
<% @books.each do |book| %>
  <div>
    <%= link_to user_path(book.user.id) do %>
      <%= image_tag book.user.get_profile_image(100,100) %>
    <% end %>
    <%= link_to book_path(book.id) do %>
      <p><%= book.title %><p>
    <% end %>
    <p><%= book.body %><p>
  </div>
<% end %>