<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>


<h1>New book</h1>

<%= form_with model: @book do |f| %>
  <label>Title</label>
    <%= f.text_field :title %>
  <label>Opinion</label>
    <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


<h2>Books</h2>

<% @books.each do |book| %>
  <div>
    <p>ユーザー画像設定する:<%= image_tag 'sample-author1.jpg' %></p>
    <p>Title<p>
    <%= link_to book_path(book.id) do %>
      <%= book.title %>
    <% end %>
    <p>Opinion<%= book.body %></p>
  </div>
<% end %>
